<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="@dimen/sixty"
            android:layout_height="@dimen/text_height_50"
            android:id="@+id/idImageCartImage"
            android:layout_marginRight="@dimen/side_margin10"
            />
        <TextView

            android:layout_width="@dimen/imageRecyclerSize200"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/side_margin10"
            android:textColor="@color/colorBlack"
            android:id="@+id/idTVcartfoodName"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:id="@+id/idTVcartFoodPrice" />
         </LinearLayout></LinearLayout>
